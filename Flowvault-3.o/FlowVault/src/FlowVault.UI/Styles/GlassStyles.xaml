<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Glass/Acrylic Background Brush -->
    <AcrylicBrush x:Key="GlassBackgroundBrush"
                  TintColor="#202020"
                  TintOpacity="0.65"
                  FallbackColor="#2D2D2D" />

    <AcrylicBrush x:Key="GlassTileBackgroundBrush"
                  TintColor="#1A1A1A"
                  TintOpacity="0.75"
                  FallbackColor="#252525" />

    <AcrylicBrush x:Key="GlassTopBarBrush"
                  TintColor="#181818"
                  TintOpacity="0.8"
                  FallbackColor="#1E1E1E" />

    <!-- Accent Colors -->
    <Color x:Key="AccentBlue">#0078D4</Color>
    <Color x:Key="AccentGreen">#107C10</Color>
    <Color x:Key="AccentOrange">#FF8C00</Color>
    <Color x:Key="AccentRed">#E81123</Color>
    <Color x:Key="AccentPurple">#881798</Color>

    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}" />
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}" />
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}" />
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}" />
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#B0B0B0" />
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#808080" />

    <!-- Border -->
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#40FFFFFF" />
    <Thickness x:Key="GlassBorderThickness">1</Thickness>
    <CornerRadius x:Key="GlassCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="TileCornerRadius">12</CornerRadius>

    <!-- Shadows -->
    <ThemeShadow x:Key="TileShadow" />

    <!-- Top Bar Style -->
    <Style x:Key="TopBarStyle" TargetType="Grid">
        <Setter Property="Height" Value="56" />
        <Setter Property="Background" Value="{StaticResource GlassTopBarBrush}" />
    </Style>

    <!-- Tile Base Style -->
    <Style x:Key="TileBaseStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassTileBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource GlassBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource TileCornerRadius}" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="GlassButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="MinWidth" Value="36" />
        <Setter Property="MinHeight" Value="36" />
    </Style>

    <!-- TextBlock Styles -->
    <Style x:Key="TileTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="TileSubtitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="TileBodyStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Input Styles -->
    <Style x:Key="GlassTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#20FFFFFF" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- Priority Tag Styles -->
    <Style x:Key="PriorityHighStyle" TargetType="Border">
        <Setter Property="Background" Value="#40E81123" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentRedBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="PriorityMediumStyle" TargetType="Border">
        <Setter Property="Background" Value="#40FF8C00" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentOrangeBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="PriorityLowStyle" TargetType="Border">
        <Setter Property="Background" Value="#40107C10" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentGreenBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <!-- Status Tag Styles -->
    <Style x:Key="StatusNotStartedStyle" TargetType="Border">
        <Setter Property="Background" Value="#40808080" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="StatusInProgressStyle" TargetType="Border">
        <Setter Property="Background" Value="#400078D4" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="StatusCompletedStyle" TargetType="Border">
        <Setter Property="Background" Value="#40107C10" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

</ResourceDictionary>

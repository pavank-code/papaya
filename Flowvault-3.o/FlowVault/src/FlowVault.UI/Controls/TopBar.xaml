<UserControl
    x:Class="FlowVault.UI.Controls.TopBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlowVault.UI.Controls">

    <Grid Style="{StaticResource TopBarStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Left Section: Project Selector -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" Margin="16,0">
            <TextBlock Text="Flow Vault" 
                       Style="{StaticResource TileTitleStyle}"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />
            
            <ComboBox x:Name="ProjectSelector"
                      Width="200"
                      VerticalAlignment="Center"
                      SelectionChanged="ProjectSelector_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Style="{StaticResource IconButtonStyle}" 
                    Click="AddProject_Click"
                    ToolTipService.ToolTip="Add Project">
                <FontIcon Glyph="&#xE710;" FontSize="16" />
            </Button>
        </StackPanel>

        <!-- Center Section: Search -->
        <Grid Grid.Column="1" Margin="16,0">
            <TextBox x:Name="SearchBox"
                     PlaceholderText="Search files, tasks, notes..."
                     Style="{StaticResource GlassTextBoxStyle}"
                     VerticalAlignment="Center"
                     MaxWidth="400"
                     HorizontalAlignment="Center"
                     KeyDown="SearchBox_KeyDown" />
        </Grid>

        <!-- Right Section: Actions -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" Margin="16,0">
            <Button x:Name="ClickThroughToggle"
                    Style="{StaticResource IconButtonStyle}"
                    Click="ClickThroughToggle_Click"
                    ToolTipService.ToolTip="Toggle Click-Through (Ctrl+.)">
                <FontIcon x:Name="ClickThroughIcon" Glyph="&#xE8B7;" FontSize="16" />
            </Button>

            <Button Style="{StaticResource IconButtonStyle}"
                    Click="AddTile_Click"
                    ToolTipService.ToolTip="Add Tile">
                <FontIcon Glyph="&#xE8F4;" FontSize="16" />
            </Button>

            <Button Style="{StaticResource IconButtonStyle}"
                    Click="OpenSettings_Click"
                    ToolTipService.ToolTip="Settings">
                <FontIcon Glyph="&#xE713;" FontSize="16" />
            </Button>

            <Button Style="{StaticResource IconButtonStyle}"
                    Click="Close_Click"
                    ToolTipService.ToolTip="Close">
                <FontIcon Glyph="&#xE8BB;" FontSize="16" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
